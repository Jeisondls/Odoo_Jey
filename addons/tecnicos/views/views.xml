    <!-- Top menu item -->

    <menuitem name="tecnicos" id="tecnicos.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Empleados" id="tecnicos.menu_1" parent="tecnicos.menu_root"/>
    
    <!-- actions -->

    <menuitem name="List" id="tecnicos.menu_1_list" parent="tecnicos.menu_1"
              action="tecnicos.action_window"/>

  </data>
</odoo>
