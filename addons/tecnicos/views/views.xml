<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tecnicos.list">
      <field name="name">Lista de Técnicos</field>
      <field name="model">tecnicos.tecnicos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellido"/>
          <field name="celular"/>
          <field name="email"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tecnicos.action_window">
      <field name="name">Lista de Técnicos</field>
      <field name="res_model">tecnicos.tecnicos</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
